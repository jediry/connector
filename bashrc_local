# Bash config for this project

# Load the system configuration
source /etc/profile

# Want gvim to detach from the console
function gvim {
    gvim.exe $* &
}

# Select the Python installation to use
PYTHON=/c/Python27
export PATH=$PYTHON:$PATH
echo
echo "Using `python --version 2>&1`"

# Select the Ruby installation to use
RUBY=/c/Ruby193
export PATH=$RUBY/bin:$PATH
echo
echo "Using `ruby --version`"

# Prefix the local project 'bin' directory to the path, so that commands like
# 'rake' use the versions created by "bundle --binstubs"
export PATH=`pwd`/bin:$PATH
