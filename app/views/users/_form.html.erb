<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :person do |builder| %>
    <%= render 'people/person_fields', :f => builder %>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <% if logged_in_admin? %>
    <div class="field">
      <%= f.check_box :active %>
      <%= f.label :active %>
    </div>
    <div class="field">
      <%= f.check_box :admin %>
      <%= f.label :admin, 'Administrator' %>
    </div>
  <% else %>
    <%= f.hidden_field :active %>
    <%= f.hidden_field :admin %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
