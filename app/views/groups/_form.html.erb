<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :group_type %><br />
    <%= f.collection_select :group_type_id, GroupType.all, :id, :description %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :meeting_day %><br />
    <%= f.select :meeting_day, day_of_week_names, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :meeting_time %><br />
    <%= f.time_select :meeting_time, { :minute_step => 15, :ampm => true, :include_blank => true } %>
  </div>
  <div class="field">
    <%= f.label :region_id %><br />
    <%= f.collection_select :region_id, Region.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 10, :cols => 80 %>
  </div>
  <div class="field">
    <%= f.label :restrictions %><br />
    <%= f.text_area :restrictions, :rows => 4, :cols => 80 %>
  </div>
  <div class="field">
    <%= f.check_box :active %> <%= f.label :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
