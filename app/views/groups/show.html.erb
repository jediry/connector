<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @group.name %>
</p>

<p>
  <b>Meeting:</b>
  <%= day_of_week_name @group.meeting_day %>
  <%= @group.meeting_time.to_s(:time) %>
</p>

<p>
  <b>Contact:</b>
  <%= @group.user.person.name %>
</p>

<p>
  <b>Description:</b>
  <pre><%= @group.description %></pre>
</p>

<p>
  <b>Restrictions:</b>
  <pre><%= @group.restrictions %></pre>
</p>

<p>
  <% members = @group.members %>
  <b>This group has <%= members.size %> member(s)</b>
  <% if !members.empty? %>
    <% members.each do |m| %>
      <div>
        <%= link_to m.name, m %>
        <%= link_to '[remove]', "/groups/#{@group.id}/members/#{m.id}", :method => :delete, :confirm => 'Are you sure you want to remove this person from this group?' %>
      </div>
    <% end %>
  <% end %>
  <div>
    <% non_members = @group.non_members %>
    <% if !non_members.empty? %>
      <%= form_tag "/groups/#{@group.id}/members", :method => :post do %>
        Add someone: <%= select_tag :person_id, options_from_collection_for_select(non_members, :id, :name), :include_blank => true %>
        <%= submit_tag 'Add' %>
      <% end %>
    <% end %>
  </div>
</p>


<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
