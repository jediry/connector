<div class="page_title">
  <h1>Listing task types</h1>
  <%= link_to '[create new task type]', new_task_type_path, :class => :action %>
</div>

<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
    <% if logged_in_super_admin? %>
      <th></th>
    <% end %>
  </tr>

<% @task_types.each do |task_type| %>
  <tr>
    <td><%= link_to task_type.description, task_type %></td>
    <td><%= link_to '[edit]', edit_task_type_path(task_type), :class => :action %></td>
    <% if logged_in_super_admin? %>
      <td><%= link_to '[destroy]', task_type, confirm: 'This will obliterate this record from the database...are you sure?', :method => :delete, :class => :action %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
