<% provide(:title, 'Homepage messages') %>
<p><%= link_to '[create new message]', new_message_path, :class => :action %></p>

<% Message.order(:sort_order).all.each do |m| %>
  <div class="grouping_box">
    <h2><%= m.title %></h2>
    <%= link_to '[edit]', edit_message_path(m) %><br />
    <%= format_plain_text m.content %>
  </div>
<% end %>
