<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @person.name %>
</p>

<p>
  <b>Phone:</b>
  <%= format_telephone @person.phone %>
</p>

<p>
  <b>Email:</b>
  <%= @person.email %>
</p>

<p>
  <b>Address:</b>
  <% if @person.address.nil? %>
    <i>none</i>
  <% else %>
    <%= @person.address.street %><br />
    <% if not @person.address.detail.nil? %>
      <%= @person.address.detail %><br />
    <% end %>
    <%= @person.address.city %>, <%= @person.address.state %> <%= @person.address.zip %>
  <% end %>
</p>

<p>
  <% groups = @person.groups %>
  <b>This person is a member of <%= groups.size %> groups(s)</b>
  <% if !groups.empty? %>
    <% groups.each do |g| %>
      <div>
        <%= link_to g.name, g %>
        <%= link_to '[remove]', "/people/#{@person.id}/groups/#{g.id}", :method => :delete, :confirm => 'Are you sure you want to remove this person from this group?' %>
      </div>
    <% end %>
  <% end %>
  <div>
    <% non_member_groups = @person.non_member_groups %>
    <% if !non_member_groups.empty? %>
      <%= form_tag "/people/#{@person.id}/groups", :method => :post do %>
        Add to a group: <%= select_tag :group_id, options_from_collection_for_select(non_member_groups, :id, :name), :include_blank => true %>
        <%= submit_tag 'Add' %>
      <% end %>
    <% end %>
  </div>
</p>


<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
